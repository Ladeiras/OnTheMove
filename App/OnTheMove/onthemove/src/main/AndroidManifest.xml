<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moksie.onthemove" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon_sobre"
        android:label="@string/app_name"
        android:theme="@style/OnTheMoveTheme" >
        <activity
            android:name="com.moksie.onthemove.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.moksie.onthemove.activities.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.moksie.onthemove.activities.GPSAlertActivity"
            android:label="@string/title_activity_gpsalert" >
        </activity>
        <activity
            android:name="com.moksie.onthemove.activities.MoveMeActivity"
            android:label="@string/title_activity_move_me" >
        </activity>
        <activity
            android:name="com.moksie.onthemove.activities.VoosActivity"
            android:label="@string/title_activity_voos" >
        </activity>
        <activity
            android:name="com.moksie.onthemove.activities.ServicesActivity"
            android:label="@string/title_activity_services" >
        </activity>
        <activity
            android:name="com.moksie.onthemove.activities.VooInfoActivity"
            android:label="@string/title_activity_voo_info" >
        </activity>
        <activity
            android:name="com.moksie.onthemove.activities.FooterActivity"
            android:label="@string/title_activity_footer" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>
